            // when element is created, hint popup needs to be defined
            if (sfdcPage && typeof sfdcPage.setHelp === "function") {
                sfdcPage.setHelp(randomId, hint);
            }
        }

        return {
            setHelpHint: function(sectionId, hint) {
                setHelpHint(sectionId, hint);
